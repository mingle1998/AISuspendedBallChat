{
  "name": "ai-suspended-ball-chat",
  "version": "0.1.79",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:lib": "vite build --config vite.config.lib.ts",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build:package": "npm run clean && npm run build:lib && npm run build:types && npm run copy-files && npm run remove-css",
    "clean": "rimraf dist",
    "copy-files": "cp README.md LICENSE dist/ 2>/dev/null || true",
    "remove-css": "rm -f dist/style.css",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "mock-server": "npx ts-node ./src/mock/mock-server-new.ts",
    "prepublishOnly": "npm run build:package"
  },
  "description": "一个功能强大的AI聊天组件，支持流式响应、图片上传、语音播报、历史记录管理等功能。可以作为悬浮球或独立面板使用。",
  "main": "dist/suspended-ball-chat.umd.js",
  "module": "dist/suspended-ball-chat.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/suspended-ball-chat.es.js",
      "require": "./dist/suspended-ball-chat.umd.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "vue",
    "vue3",
    "chat",
    "chatbot",
    "ai-assistant",
    "ai-chat",
    "streaming",
    "components",
    "typescript",
    "ui-library",
    "suspended-ball",
    "floating-chat"
  ],
  "author": "luckyCola.com.cn",
  "license": "MIT",
  "homepage": "http://luckycola.com.cn",
  "repository": {
    "type": "git",
    "url": "https://github.com/mingle1998/AISuspendedBallChat"
  },
  "bugs": {
    "url": "https://github.com/mingle1998/AISuspendedBallChat/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "clipboard": "^2.0.11",
    "dompurify": "^3.2.6",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.22",
    "lodash-es": "^4.17.21",
    "marked": "^16.2.0",
    "marked-highlight": "^2.2.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/katex": "^0.16.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.4.0",
    "cors": "^2.8.5",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.17.0",
    "express": "^4.18.0",
    "less": "^4.4.1",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vue": "^3.3.0",
    "vue-tsc": "^1.8.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": false
    }
  }
}
